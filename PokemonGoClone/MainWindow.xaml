<Window x:Class="PokemonGoClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonGoClone"
        xmlns:view="clr-namespace:PokemonGoClone.Views"
        xmlns:viewmodel="clr-namespace:PokemonGoClone.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:StartViewModel}">
            <view:StartView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:TrainerCreationViewModel}">
            <view:TrainerCreationView/>
        </DataTemplate>
    </Window.Resources>
    
    <Window.DataContext>
        <viewmodel:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <ContentControl Content="{Binding CurrentView}" />
    </Grid>

    <Window.InputBindings>
        <KeyBinding Command="{Binding CurrentViewModel.MoveWCommand}" Key="W"/>
        <KeyBinding Command="{Binding CurrentViewModel.MoveSCommand}" Key="S"/>
        <KeyBinding Command="{Binding CurrentViewModel.MoveACommand}" Key="A"/>
        <KeyBinding Command="{Binding CurrentViewModel.MoveDCommand}" Key="D"/>
    </Window.InputBindings>
    
</Window>
