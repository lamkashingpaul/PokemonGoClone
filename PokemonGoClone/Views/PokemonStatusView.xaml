<UserControl x:Class="PokemonGoClone.Views.PokemonStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokemonGoClone.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ItemsControl Focusable="False" ItemsSource="{Binding CurrentViewModel.Pokemon}" Margin="0,50,0,0">

            <ItemsControl.Template>
                <ControlTemplate>
                    <ItemsPresenter>
                    </ItemsPresenter>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding CurrentViewModel.MainWindowViewModel.GotoPokemonStatusViewModelCommand}" CommandParameter="{Binding}">
                        <StackPanel>
                            <Image Source="{Binding ImageSource}" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>
